{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [".dto.ts", ".input.ts", ".output.ts"]
        }
      }
    ],
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true },
      {
        "include": "templates/**/*.hbs",
        "watchAssets": true
      }
    ]
  }
}
